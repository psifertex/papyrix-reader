# Papyrix Theme: Light with Noto Sans SC (Simplified Chinese)
# Copy this file to /config/themes/ on your SD card
# Copy the fonts/noto-sans-sc-* folders to /config/fonts/ on your SD card

[theme]
name = Light Noto Sans SC

[colors]
inverted_mode = false
background = white

[selection]
fill_color = black
text_color = white

[text]
primary_color = black
secondary_color = black

[layout]
margin_top = 9
margin_side = 3
item_height = 30
item_spacing = 0
front_buttons = bclr

[fonts]
ui_font =
reader_font_small = noto-sans-sc-14
reader_font_medium = noto-sans-sc-16
reader_font_large = noto-sans-sc-18
